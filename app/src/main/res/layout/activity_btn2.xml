<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="#ffbcd9"
        android:text="백현이를 기다리는 방법2, 백현이의 솔로 앨범 정주행"/>

    <ImageView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/amuseumpark"
        android:background="@color/black"
        android:layout_margin="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. 백현이의 솔로 앨범 정주행"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <View
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="5px"
        android:background="#696969" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">
        <LinearLayout
            android:background="@drawable/square_background_border_black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnHappy"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="기쁠 때는 Poppin'"
                android:textSize="15dp"
                android:background="#ffbcd9"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/btnSad"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="슬플 때는 Cry For Love"
                android:textSize="15dp"
                android:background="#ffbcd9"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/btnLonely"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="외로울 때는 Bambi"
                android:textSize="15dp"
                android:background="#ffbcd9"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/btnLove"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="사랑할 때는 Privacy"
                android:textSize="15dp"
                android:background="#ffbcd9"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/btnSleep"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="자기 전에는 나의 시간은"
                android:textSize="15dp"
                android:background="#ffbcd9"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/btnGo"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="출근길에는 R U Ridin'?"
                android:textSize="15dp"
                android:background="#ffbcd9"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/btnHeart"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="설레고 싶을 땐 놀이공원"
                android:textSize="15dp"
                android:background="#ffbcd9"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="10dp" />


        </LinearLayout>

    </ScrollView>



</LinearLayout>